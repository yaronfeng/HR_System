
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>登录</title>
    <meta http-equiv="X-UA-Compatible" content="IE=8,10" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="description" content="派遣业务系统" />
    <meta name="keywords" content="派遣业务系统" />
    <meta name="copyright" content="Copyright@英达国际 all rights reserved 2017" />
    <!-- favicon -->
    <link href="../img/favicon.ico" rel="shortcut icon" />
    <!-- css -->
    <link rel="stylesheet" href="~/Content/assets/css/amazeui.min.css" />
    <script type="text/javascript" src="~/JS/jquery-1.11.1.min.js"></script>
    <style>
        .header {
            text-align: center;
        }

            .header h1 {
                font-size: 200%;
                color: #333;
                margin-top: 30px;
            }

            .header p {
                font-size: 14px;
            }
    </style>
    <script type="text/javascript">
      function Login(){
            $("#")
            var accountName = $("#accountName").val();
            var password = $("#password").val();

            if (accountName.length == 0) { alert("必须输入用户名"); return; }
            if (password.length == 0) { alert("必须输入密码"); return; }

            var user = {
                accountName: accountName,
                password: password
            };

            $.ajax({
                type: "POST",
                contentType: "application/json",
                url: "/Account/LoginCheck",
                data: JSON.stringify(user),
                dataType: "json",
                success: function (result) {
                    if (result == "1"){
                        window.location.href = "/home/index";
                    }
                    else{
                        alert("登录失败");
                    }
                }
            });
        };
    </script>
</head>
<body>
    <div class="header">
        <div class="am-g">
            <h1>英达国际人才</h1>
            <p>人才派遣管理系统<br /></p>
        </div>
        <hr />
    </div>
    <div class="am-g">
        <div class="am-u-lg-2 am-u-md-8 am-u-sm-centered">
            <h3>登录</h3>
            <hr>
            <div class="am-btn-group">
                <a href="#" class="am-btn am-btn-secondary am-btn-sm"><i class="am-icon-user am-icon-sm"></i> IntelHR</a>
            </div>
            <br>
            <br>
            <div class="am-form">
                <label for="email">邮箱:</label>
                <input type="text" name="" id="accountName" value="">
                <br>
                <label for="password">密码:</label>
                <input type="password" name="" id="password" value="">
                <br>
                <label for="remember-me">
                    <input id="remember-me" type="checkbox">
                    记住密码
                </label>
                <br />
                <div class="am-cf">
                    <input type="submit" name="" onclick="javascript: Login();" value="登 录" class="am-btn am-btn-primary am-btn-sm am-fl">
                </div>
            </div>
            <hr>
            <p>© 2017 IntelHR, all rights reserved 2017.</p>
        </div>
    </div>
</body>
</html>
